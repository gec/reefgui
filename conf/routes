# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET     /                           controllers.Application.index

GET     /login                      controllers.Application.getLoginOrAlreadyLoggedIn
DELETE  /login                      controllers.Application.deleteLogin
POST    /login                      controllers.Application.postLogin

GET     /services/websocket          controllers.Application.getWebSocket( authToken)

GET     /entities                   controllers.Application.getEntities(types: List[String])
GET     /points                     controllers.Application.getPoints
GET     /commands                     controllers.Application.getCommands
GET     /commands/:name               controllers.Application.getCommand(name: String)


#### OLD STUFF
GET     /entity/*name                controllers.Application.getEntityDetail(name)
GET     /equipmentwithpointsbytype   controllers.Application.getEquipmentWithPointsByType( eqTypes: List[String], pointTypes: List[String])

GET     /measurement                 controllers.Application.getMeasurements

GET     /point/*name                 controllers.Application.getPointDetail(name)

GET     /endpoint                    controllers.Application.getEndpoints
GET     /endpoint/*name              controllers.Application.getEndpointDetail(name)

GET     /application                 controllers.Application.getApplications
GET     /application/*name           controllers.Application.getApplicationDetail(name)

GET     /event                       controllers.Application.getEvents

GET     /alarm                       controllers.Application.getAlarms

GET     /agent                       controllers.Application.getAgents
GET     /agent/*name                 controllers.Application.getAgentDetail(name)

GET     /permissionset                       controllers.Application.getPermissionSets
GET     /permissionset/*name                 controllers.Application.getPermissionSetDetail(name)

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.at(path="/public", file)
GET     /*file                      controllers.Assets.at(path="/public", file)
